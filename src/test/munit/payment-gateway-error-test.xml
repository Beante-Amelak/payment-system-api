                    <munit-tools:with-attribute attributeName="doc:name" whereValue="Payment Gateway Request"/>
                </munit-tools:with-attributes>
                <munit-tools:then-return>
                    <munit-tools:error typeId="HTTP:TIMEOUT"/>
                </munit-tools:then-return>
            </munit-tools:mock-when>
        </munit:behavior>
        
        <munit:execution>
            <munit:set-event doc:name="Set Valid Payment Request">
                <munit:payload value="#[MunitTools::getResourceAsString('payment-request-success.json')]" mediaType="application/json" encoding="UTF-8"/>
                <munit:attributes value="#[{
                    headers: {
                        'client_id': 'test-client-id',
                        'client_secret': 'test-client-secret',
                        'Content-Type': 'application/json'
                    },
                    method: 'POST',
                    requestPath: '/api/v1/payments',
                    requestUri: '/api/v1/payments'
                }]"/>
            </munit:set-event>
            
            <flow-ref name="post:\payments:application\json:Payment_System_API_Config" doc:name="Call Payment Flow"/>
        </munit:execution>
    </munit:test>

    <!-- =========================================================
         Test: Payment Declined by Gateway
         Scenario: Gateway returns declined status
         ========================================================= -->
    <munit:test name="payment-declined-test" 
                description="Test handling when payment is declined by gateway"
                expectedErrorType="APP:PAYMENT_DECLINED"
                doc:name="Payment Declined Test">
        
        <munit:behavior>
            <!-- Mock Gateway Declined Response -->
            <munit-tools:mock-when processor="http:request" doc:name="Mock Gateway Declined">
                <munit-tools:with-attributes>
                    <munit-tools:with-attribute attributeName="doc:name" whereValue="Payment Gateway Request"/>
                </munit-tools:with-attributes>
                <munit-tools:then-return>
                    <munit-tools:payload value="#[MunitTools::getResourceAsString('gateway-response-declined.json')]" mediaType="application/json" encoding="UTF-8"/>
                    <munit-tools:attributes value="#[{statusCode: 200}]"/>
                </munit-tools:then-return>
            </munit-tools:mock-when>
        </munit:behavior>
        
        <munit:execution>
            <munit:set-event doc:name="Set Valid Payment Request">
                <munit:payload value="#[MunitTools::getResourceAsString('payment-request-success.json')]" mediaType="application/json" encoding="UTF-8"/>
                <munit:attributes value="#[{
                    headers: {
                        'client_id': 'test-client-id',
                        'client_secret': 'test-client-secret',
                        'Content-Type': 'application/json'
                    },
                    method: 'POST',
                    requestPath: '/api/v1/payments',
                    requestUri: '/api/v1/payments'
                }]"/>
            </munit:set-event>
            
            <flow-ref name="post:\payments:application\json:Payment_System_API_Config" doc:name="Call Payment Flow"/>
        </munit:execution>
    </munit:test>

    <!-- =========================================================
         Test: Gateway Error Response
         Scenario: Gateway returns error status
         ========================================================= -->
    <munit:test name="payment-gateway-error-response-test" 
                description="Test handling when gateway returns error response"
                expectedErrorType="APP:GATEWAY_ERROR"
                doc:name="Gateway Error Response Test">
        
        <munit:behavior>
            <!-- Mock Gateway Error Response -->
            <munit-tools:mock-when processor="http:request" doc:name="Mock Gateway Error Response">
                <munit-tools:with-attributes>
                    <munit-tools:with-attribute attributeName="doc:name" whereValue="Payment Gateway Request"/>
                </munit-tools:with-attributes>
                <munit-tools:then-return>
                    <munit-tools:payload value='#[output application/json --- {
                        "transactionId": "TXN-ERROR-001",
                        "status": "ERROR",
                        "errorMessage": "Gateway internal error",
                        "timestamp": now() as String
                    }]' mediaType="application/json" encoding="UTF-8"/>
                    <munit-tools:attributes value="#[{statusCode: 500}]"/>
                </munit-tools:then-return>
            </munit-tools:mock-when>
        </munit:behavior>
        
        <munit:execution>
            <munit:set-event doc:name="Set Valid Payment Request">
                <munit:payload value="#[MunitTools::getResourceAsString('payment-request-success.json')]" mediaType="application/json" encoding="UTF-8"/>
                <munit:attributes value="#[{
                    headers: {
                        'client_id': 'test-client-id',
                        'client_secret': 'test-client-secret',
                        'Content-Type': 'application/json'
                    },
                    method: 'POST',
                    requestPath: '/api/v1/payments',
                    requestUri: '/api/v1/payments'
                }]"/>
            </munit:set-event>
            
            <flow-ref name="post:\payments:application\json:Payment_System_API_Config" doc:name="Call Payment Flow"/>
        </munit:execution>
    </munit:test>

</mule>
