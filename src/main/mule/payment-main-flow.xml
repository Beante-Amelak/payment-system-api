<?xml version="1.0" encoding="UTF-8"?>
<mule xmlns="http://www.mulesoft.org/schema/mule/core"
      xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:http="http://www.mulesoft.org/schema/mule/http"
      xmlns:apikit="http://www.mulesoft.org/schema/mule/mule-apikit"
      xmlns:ee="http://www.mulesoft.org/schema/mule/ee/core"
      xsi:schemaLocation="
        http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
        http://www.mulesoft.org/schema/mule/http http://www.mulesoft.org/schema/mule/http/current/mule-http.xsd
        http://www.mulesoft.org/schema/mule/mule-apikit http://www.mulesoft.org/schema/mule/mule-apikit/current/mule-apikit.xsd
        http://www.mulesoft.org/schema/mule/ee/core http://www.mulesoft.org/schema/mule/ee/core/current/mule-ee.xsd">

    <!-- =========================================================
         Main API Flow - Entry Point
         ========================================================= -->
    <flow name="payment-system-api-main" doc:name="Payment System API Main">
        <http:listener config-ref="HTTP_Listener_Config" 
                       path="${http.listener.basePath}/*" 
                       doc:name="HTTP Listener"/>
        
        <!-- Generate Correlation ID -->
        <set-variable variableName="correlationId" 
                      value="#[correlationId]" 
                      doc:name="Set Correlation ID"/>
        
        <!-- Entry Logging -->
        <logger level="INFO" 
                doc:name="Log Request Entry"
                message="#['Payment API Request - CorrelationId: ' ++ vars.correlationId ++ ' - Method: ' ++ attributes.method ++ ' - Path: ' ++ attributes.requestPath]"/>
        
        <!-- APIKit Router -->
        <apikit:router config-ref="Payment_System_API_Config" doc:name="APIKit Router"/>
        
        <!-- Exit Logging -->
        <logger level="INFO" 
                doc:name="Log Response Exit"
                message="#['Payment API Response - CorrelationId: ' ++ vars.correlationId ++ ' - Status: ' ++ (vars.httpStatus default 200)]"/>
        
        <!-- Global Error Handler -->
        <error-handler ref="Global_Error_Handler"/>
    </flow>

    <!-- =========================================================
         POST /payments - Process Payment Flow
         ========================================================= -->
    <flow name="post:\payments:application\json:Payment_System_API_Config" 
          doc:name="POST /payments">
        
        <!-- Store Original Request -->
        <set-variable variableName="originalRequest" 
                      value="#[payload]" 
                      doc:name="Store Original Request"/>
        
        <!-- Client ID Enforcement -->
        <flow-ref name="validate-client-credentials-subflow" 
                  doc:name="Validate Client Credentials"/>
        
        <!-- Request Validation -->
        <flow-ref name="request-validation-subflow" 
                  doc:name="Validate Payment Request"/>
        
        <!-- Call Payment Gateway -->
        <flow-ref name="payment-gateway-subflow" 
                  doc:name="Process Payment via Gateway"/>
        
        <!-- Map Response -->
        <flow-ref name="response-mapping-subflow" 
                  doc:name="Map Payment Response"/>
        
        <!-- Set HTTP Status -->
        <set-variable variableName="httpStatus" 
                      value="#[201]" 
                      doc:name="Set HTTP Status 201"/>
        
    </flow>

    <!-- =========================================================
         Client Credentials Validation Subflow
         ========================================================= -->
    <sub-flow name="validate-client-credentials-subflow" 
              doc:name="Validate Client Credentials Subflow">
        
        <ee:transform doc:name="Validate Credentials">
            <ee:variables>
                <ee:set-variable variableName="isValidClient"><![CDATA[%dw 2.0
output application/java
import try from dw::Runtime
var clientIdHeader = attributes.headers['client_id'] default ""
var clientSecretHeader = attributes.headers['client_secret'] default ""
var expectedClientId = try(() -> p('secure::client.credentials.id') default "")
var expectedClientSecret = try(() -> p('secure::client.credentials.secret') default "")
---
if (isEmpty(clientIdHeader) or isEmpty(clientSecretHeader))
    false
else if (expectedClientId.success and expectedClientSecret.success)
    (clientIdHeader == expectedClientId.result) and (clientSecretHeader == expectedClientSecret.result)
else
    // Fallback for testing - accept any non-empty credentials
    !isEmpty(clientIdHeader) and !isEmpty(clientSecretHeader)]]></ee:set-variable>
            </ee:variables>
        </ee:transform>
        
        <choice doc:name="Check Valid Client">
            <when expression="#[vars.isValidClient == false]">
                <raise-error type="APP:UNAUTHORIZED" 
                             description="Invalid or missing client credentials" 
                             doc:name="Raise Unauthorized Error"/>
            </when>
        </choice>
        
    </sub-flow>

</mule>
